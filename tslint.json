{
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ],
    "extends": [
        "tslint-config-standard",
        "tslint-config-prettier"
    ],
    "rules": {
        "prettier": [
            true,
            {
                "singleQuote": true,
                "semi": false
            }
        ],
        "await-promise": false,
        "deprecation": false,
        "no-floating-promises": false,
        "no-unnecessary-qualifier": false,
        "no-unnecessary-type-assertion": false,
        "strict-type-predicates": false
    }
}